@{
    ViewBag.Title = "landlorder | Search and Submit Landlord Reviews";
}



<!-- ******PROMO****** -->

<section id="promo">
    <div class="promo section offset-header">
        <div class=" container-fluid text-center">
            <div class="row">
                <h2 class="title">landlorder</h2>
                <h3 class="subtitle">Search & submit landlord reviews anywhere</h3>
                <p class="intro"></p>
            </div>
            <div class="col-md-4"></div>
                <div align="center" class="col-md-4">
                    <div class="row">
                        <form method="get" action="/Reviews/Search">
                            <input type="text" id="autocomplete" name="locationinput" required autocomplete="off" class="subscribe form-control" autofocus placeholder="Search address, city or zip" spellcheck="false">
                            <span id="locatiobtn" class="input-group-btn-lg">
                                <button type="submit" class="submit-icon">
                                    <i class="fa fa-search fa-lg"></i>
                                </button>
                            </span>
                        </form>
                    </div>
            </div>

            <div class="col-md-4"></div>

        </div><!--//container-->
    </div>
</section><!--//promo-->
<!-- ******ABOUT****** -->
<section id="about" class="about section">
    <div class="container">
        <h1 class="title text-center">How can landlorder help?</h1>
         <hr />
        <div class="row">
            <div class="item col-md-4 col-md-6 col-xs-12">
                <div class="icon-holder">
                    <i class="fa fa-search"></i>
                </div>
                <div class="content">
                    <h3 class="sub-title">Search for landlord reviews</h3>
                    <p class="info">Looking for a reliable landlord? You can quickly search landlord reviews anywhere with just an address, city, or zip.</p>
                </div><!--//content-->
            </div><!--//item-->
            <div class="item col-md-4 col-md-6 col-xs-12">
                <div class="icon-holder">
                    <i class="fa fa-plus-square"></i>
                </div>
                <div class="content">
                    <h3 class="sub-title">Submit landlord reviews</h3>
                    <p class="info">Find a landlord you have rented with and tell others about your experience.</p>
                </div><!--//content-->
            </div><!--//item-->
            <div class="item col-md-4 col-md-6 col-xs-12">
                <div class="icon-holder">
                    <i class="fa fa-lock"></i>
                </div>
                <div class="content">
                    <h3 class="sub-title">Rent stress-free</h3>
                    <p class="info">Read reviews, write reviews, and enjoy the comfort of renting stress-free! </p>
                </div><!--//content-->
            </div><!--//item-->
            <div class="clearfix visible-md"></div>
        </div><!--//row-->
    </div><!--//container-->
</section><!--//about-->



<section class="explore section">
    <div class="countainer-fluid">
        <div class="row nopadding">
            <div class="col-sm-3 column">
                <a href="/Reviews/Search?locationinput=New+York%2C+NY%2C+United+States">
                    <div class="explore-holder">
                        <div class="explore-1 transparent"></div>
                        <h2>New York</h2>
                    </div>
                </a>
            </div>
            <div class="col-sm-3 column">                
                <a href="/Reviews/Search?locationinput=Seattle%2C+WA%2C+United+States">
                    <div class="explore-holder">
                        <div class="explore-2 transparent"></div>
                        <h2>Seattle</h2>
                    </div>
                </a>
            </div>
            <div class="col-sm-3 column">
                <a href="/Reviews/Search?locationinput=Miami%2C+FL%2C+United+States">
                    <div class="explore-holder">
                        <div class="explore-3 transparent"></div>
                        <h2>Miami</h2>
                    </div>
                </a>
            </div>
            <div class="col-sm-3 column">
                <a href="/Reviews/Search?locationinput=Chicago%2C+IL%2C+United+States">
                    <div class="explore-holder">
                        <div class="explore-4 transparent"></div>
                        <h2>Chicago</h2>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<script>initialize();</script>

