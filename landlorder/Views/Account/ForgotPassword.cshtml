@model landlorder.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password | landlorder";
}

<div class="form-wrap">
    <div class="tabs-content">
        <section id="loginForm">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2>Forgot your password?</h2>
                <h4 class="logintitle">Enter your email address and we'll send you a link to reset your password.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="login-form">
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "input", @placeholder = "Email", autofocus = "" })

                </div>
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-10">
                        <input type="submit" value="Email Password" class="button" />                    </div>
                </div>
            }
        </section>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
